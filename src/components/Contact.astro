---
import ContactIcon from './icons/ContactIcon.astro'
import SocialIcon from './icons/SocialIcon.astro'
import { CONTACT_INFO, SOCIAL_LINKS } from '../data/contact.js'
---

<section id="contato" class="relative py-24 md:py-32 bg-primary-50/30 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute -top-32 -left-32 w-96 h-96 bg-primary-100/50 rounded-full blur-[100px]"></div>
  <div class="absolute -bottom-32 -right-32 w-96 h-96 bg-primary-200/30 rounded-full blur-[80px]"></div>

  <div class="relative max-w-[1200px] mx-auto px-6">
    <!-- Section header -->
    <div class="text-center mb-16 animate-on-scroll">
      <span class="inline-flex items-center gap-2 text-xs font-semibold tracking-[0.2em] uppercase text-primary-600 font-display mb-4 px-4 py-1.5 bg-primary-50 rounded-full border border-primary-100" data-i18n="contact.label">Contato</span>
      <h2 class="font-display font-bold text-3xl md:text-5xl text-[#212020] mb-5 mt-4">
        <span data-i18n="contact.title">Vamos</span><span class="text-primary-600" data-i18n="contact.titleHighlight"> conversar?</span>
      </h2>
      <p class="text-[#666] text-lg max-w-2xl mx-auto font-body leading-relaxed" data-i18n="contact.subtitle">
        Estamos prontos para ajudar a transformar suas ideias em realidade.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
      <!-- Contact Info (left side) -->
      <div class="lg:col-span-2 space-y-5 animate-on-scroll-left">
        <!-- Contact cards -->
        {CONTACT_INFO.map((info, index) => (
          <div
            class="group flex items-start gap-4 p-5 bg-white rounded-xl border border-gray-100 hover:border-primary-200 hover:shadow-lg hover:shadow-primary-600/5 transition-all duration-300"
            style={`transition-delay: ${index * 0.1}s`}
          >
            <div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center text-primary-600 group-hover:bg-primary-600 group-hover:text-white group-hover:scale-110 transition-all duration-300 shrink-0">
              <ContactIcon type={info.type} class="w-5 h-5" />
            </div>
            <div>
              <p class="text-xs font-semibold text-[#999] uppercase tracking-wider mb-1 font-display" data-i18n={`contact.info.${info.type}`}>
                {info.type === 'email' ? 'E-mail' : info.type === 'phone' ? 'Telefone' : 'Localização'}
              </p>
              {info.href ? (
                <a href={info.href} class="text-[#212020] font-medium hover:text-primary-600 transition-colors text-[15px]">
                  {info.value}
                </a>
              ) : (
                <p class="text-[#212020] font-medium text-[15px]">{info.value}</p>
              )}
            </div>
          </div>
        ))}

        <!-- Social links -->
        <div class="pt-4">
          <p class="text-sm font-semibold text-[#999] uppercase tracking-wider mb-4 font-display" data-i18n="contact.social">Redes Sociais</p>
          <div class="flex gap-3">
            {SOCIAL_LINKS.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={link.name}
                class="w-12 h-12 bg-white rounded-xl flex items-center justify-center text-primary-600 border border-gray-100 hover:bg-primary-600 hover:text-white hover:border-primary-600 hover:-translate-y-1 hover:shadow-lg hover:shadow-primary-600/20 transition-all duration-300"
              >
                <SocialIcon type={link.icon} class="w-5 h-5" />
              </a>
            ))}
          </div>
        </div>

        <!-- Trust badge -->
        <div class="mt-6 p-4 bg-white rounded-xl border border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-emerald-50 rounded-lg flex items-center justify-center text-emerald-600 shrink-0">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/><path d="M9 12l2 2 4-4" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </div>
            <div>
              <p class="text-sm font-semibold text-[#212020] font-display">Resposta rápida</p>
              <p class="text-xs text-[#888]">Retornamos em até 24 horas</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form (right side) -->
      <div class="lg:col-span-3 animate-on-scroll-right">
        <div class="bg-white rounded-2xl border border-gray-100 shadow-xl shadow-primary-600/[0.03] p-8 md:p-10">
          <h3 class="font-display font-semibold text-xl text-[#212020] mb-8" data-i18n="contact.form.title">Envie uma mensagem</h3>

          <form id="contact-form" class="space-y-6" novalidate>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <!-- Name -->
              <div class="group">
                <label for="name" class="block text-sm font-medium text-[#444] mb-2 font-display" data-i18n="contact.form.name">Nome</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3.5 border border-gray-200 rounded-xl font-body text-[#212020] placeholder-gray-400 focus:border-primary-500 focus:ring-4 focus:ring-primary-600/10 outline-none transition-all duration-200"
                  placeholder="Seu nome"
                  data-i18n-placeholder="contact.form.namePlaceholder"
                />
              </div>
              <!-- Email -->
              <div class="group">
                <label for="email" class="block text-sm font-medium text-[#444] mb-2 font-display" data-i18n="contact.form.email">E-mail</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3.5 border border-gray-200 rounded-xl font-body text-[#212020] placeholder-gray-400 focus:border-primary-500 focus:ring-4 focus:ring-primary-600/10 outline-none transition-all duration-200"
                  placeholder="seu@email.com"
                  data-i18n-placeholder="contact.form.emailPlaceholder"
                />
              </div>
            </div>

            <!-- Subject -->
            <div>
              <label for="subject" class="block text-sm font-medium text-[#444] mb-2 font-display" data-i18n="contact.form.subject">Assunto</label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3.5 border border-gray-200 rounded-xl font-body text-[#212020] placeholder-gray-400 focus:border-primary-500 focus:ring-4 focus:ring-primary-600/10 outline-none transition-all duration-200"
                placeholder="Como podemos ajudar?"
                data-i18n-placeholder="contact.form.subjectPlaceholder"
              />
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-[#444] mb-2 font-display" data-i18n="contact.form.message">Mensagem</label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3.5 border border-gray-200 rounded-xl font-body text-[#212020] placeholder-gray-400 focus:border-primary-500 focus:ring-4 focus:ring-primary-600/10 outline-none transition-all duration-200 resize-none"
                placeholder="Descreva seu projeto ou dúvida..."
                data-i18n-placeholder="contact.form.messagePlaceholder"
              ></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              id="submit-btn"
              class="w-full flex items-center justify-center gap-2.5 px-6 py-4 bg-primary-600 text-white font-display font-semibold rounded-xl hover:bg-primary-500 hover:shadow-xl hover:shadow-primary-600/25 hover:-translate-y-0.5 transition-all duration-300 cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:translate-y-0 disabled:hover:shadow-none"
            >
              <span data-i18n="contact.form.submit">Enviar Mensagem</span>
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" class="transition-transform group-hover:translate-x-1">
                <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Toast container -->
<div id="toast-container" class="fixed top-6 right-6 z-[9999] pointer-events-none"></div>

<script>
  function showToast(type: 'success' | 'error', text: string) {
    const container = document.getElementById('toast-container')!
    const existing = container.querySelector('.toast')
    if (existing) existing.remove()

    const toast = document.createElement('div')
    toast.className = `toast pointer-events-auto px-6 py-4 rounded-xl shadow-2xl text-white font-display font-medium text-sm transition-all duration-300 transform translate-x-0 ${
      type === 'success' ? 'bg-emerald-600' : 'bg-red-600'
    }`
    toast.textContent = text
    container.appendChild(toast)

    setTimeout(() => {
      toast.style.opacity = '0'
      toast.style.transform = 'translateX(100%)'
      setTimeout(() => toast.remove(), 300)
    }, 4000)
  }

  const form = document.getElementById('contact-form') as HTMLFormElement

  form.addEventListener('submit', async (e) => {
    e.preventDefault()

    const t = (window as any).getCurrentTranslations()
    const formData = new FormData(form)
    const data: Record<string, string> = {}
    formData.forEach((value, key) => {
      data[key] = value as string
    })

    // Validation
    if (!data.name || !data.email || !data.subject || !data.message) {
      showToast('error', t.contact.form.validation.required)
      return
    }
    if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(data.email)) {
      showToast('error', t.contact.form.validation.invalidEmail)
      return
    }

    const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement
    btn.disabled = true

    try {
      const res = await fetch('https://webhooks.nexaconnect.com.br/webhook/landing-page-contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      })
      if (res.ok) {
        showToast('success', t.contact.form.successMessage)
        form.reset()
      } else {
        showToast('error', t.contact.form.errorMessage)
      }
    } catch {
      showToast('error', t.contact.form.errorMessage)
    } finally {
      btn.disabled = false
    }
  })
</script>
