---
interface Props {
  type: string
  class?: string
}

const { type, class: className = '' } = Astro.props
---

<span class={className} aria-hidden="true">
  {type === 'ai' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
      <path d="M12 2a4 4 0 014 4v1h2a2 2 0 012 2v10a2 2 0 01-2 2H6a2 2 0 01-2-2V9a2 2 0 012-2h2V6a4 4 0 014-4z" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="9" cy="13" r="1.5" fill="currentColor"/>
      <circle cx="15" cy="13" r="1.5" fill="currentColor"/>
      <path d="M9 17h6" stroke-linecap="round"/>
    </svg>
  )}
  {type === 'robot' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
      <rect x="3" y="8" width="18" height="12" rx="2"/>
      <path d="M12 8V5M12 5a2 2 0 100-4 2 2 0 000 4z" stroke-linecap="round"/>
      <circle cx="8" cy="14" r="1.5" fill="currentColor"/>
      <circle cx="16" cy="14" r="1.5" fill="currentColor"/>
      <path d="M9 18h6" stroke-linecap="round"/>
      <path d="M3 12H1M23 12h-2" stroke-linecap="round"/>
    </svg>
  )}
  {type === 'automation' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
      <path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83" stroke-linecap="round"/>
      <circle cx="12" cy="12" r="4"/>
    </svg>
  )}
  {type === 'code' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
      <path d="M16 18l6-6-6-6M8 6l-6 6 6 6" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  )}
  {type === 'mobile' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
      <rect x="5" y="2" width="14" height="20" rx="2" ry="2"/>
      <line x1="12" y1="18" x2="12.01" y2="18" stroke-linecap="round"/>
    </svg>
  )}
  {type === 'cloud' && (
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
      <path d="M18 10h-1.26A8 8 0 109 20h9a5 5 0 000-10z" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  )}
</span>
