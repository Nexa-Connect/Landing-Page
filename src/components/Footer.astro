---
import SocialIcon from './icons/SocialIcon.astro'
import { SOCIAL_LINKS } from '../data/contact.js'
---

<footer class="relative bg-[#1A0630] pt-20 pb-8 overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[200px] bg-primary-600/10 rounded-full blur-[100px]"></div>

  <!-- Top gradient border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary-500/30 to-transparent"></div>

  <div class="relative max-w-[1200px] mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 pb-14 border-b border-primary-900/50">
      <!-- Brand -->
      <div class="md:col-span-5">
        <a href="#inicio" class="inline-flex items-center gap-3 mb-5 group">
          <img src="/Logo_somente_icone.png" alt="Nexa Connect" class="h-10 w-auto brightness-0 invert group-hover:scale-110 transition-transform duration-300" />
          <span class="font-display font-bold text-xl text-white">Nexa Connect</span>
        </a>
        <p class="text-primary-200/40 max-w-sm font-body leading-relaxed mb-6" data-i18n="footer.description">
          Startup brasileira especializada em desenvolvimento de software, inteligência artificial e automações.
        </p>
        <div class="flex gap-3">
          {SOCIAL_LINKS.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.name}
              class="w-10 h-10 bg-primary-900/50 rounded-lg flex items-center justify-center text-primary-300/60 hover:bg-primary-600 hover:text-white hover:-translate-y-1 hover:shadow-lg hover:shadow-primary-600/30 transition-all duration-300"
            >
              <SocialIcon type={link.icon} class="w-4.5 h-4.5" />
            </a>
          ))}
        </div>
      </div>

      <!-- Spacer -->
      <div class="hidden md:block md:col-span-3"></div>

      <!-- Links -->
      <div class="md:col-span-4">
        <h4 class="font-display font-semibold text-white text-sm uppercase tracking-wider mb-5" data-i18n="footer.company">Empresa</h4>
        <nav class="flex flex-col gap-4">
          <a href="#sobre" class="text-primary-200/40 hover:text-primary-400 transition-colors duration-200 text-sm font-body flex items-center gap-2 group" data-i18n="footer.links.about">
            <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-200 text-primary-400" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 8H13M13 8L9 4M13 8L9 12" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Sobre Nós</span>
          </a>
          <a href="#servicos" class="text-primary-200/40 hover:text-primary-400 transition-colors duration-200 text-sm font-body flex items-center gap-2 group" data-i18n="footer.links.services">
            <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-200 text-primary-400" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 8H13M13 8L9 4M13 8L9 12" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Serviços</span>
          </a>
          <a href="#contato" class="text-primary-200/40 hover:text-primary-400 transition-colors duration-200 text-sm font-body flex items-center gap-2 group" data-i18n="footer.links.contact">
            <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-200 text-primary-400" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 8H13M13 8L9 4M13 8L9 12" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Contato</span>
          </a>
        </nav>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-8">
      <p class="text-primary-200/30 text-sm font-body">
        &copy; <span id="footer-year"></span> Nexa Connect. <span data-i18n="footer.copyright">Todos os direitos reservados.</span>
      </p>
      <a href="#inicio" class="text-primary-200/30 hover:text-primary-400 transition-colors text-sm font-body flex items-center gap-1.5 group">
        <span>Voltar ao topo</span>
        <svg class="w-4 h-4 group-hover:-translate-y-1 transition-transform" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2"><path d="M8 12V4M8 4L4 8M8 4l4 4" stroke-linecap="round" stroke-linejoin="round"/></svg>
      </a>
    </div>
  </div>
</footer>

<script>
  document.getElementById('footer-year')!.textContent = new Date().getFullYear().toString()
</script>
