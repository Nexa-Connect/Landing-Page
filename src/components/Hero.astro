<section id="inicio" class="relative min-h-screen flex items-center justify-center overflow-hidden bg-white">
  <!-- Subtle floating orbs - very low opacity -->
  <div class="absolute top-20 left-[10%] w-72 h-72 bg-primary-400/[0.07] rounded-full blur-[100px]" style="animation: float 8s ease-in-out infinite;"></div>
  <div class="absolute bottom-32 right-[5%] w-96 h-96 bg-primary-600/[0.05] rounded-full blur-[120px]" style="animation: float-delayed 10s ease-in-out infinite;"></div>
  <div class="absolute top-[40%] right-[25%] w-48 h-48 bg-primary-300/[0.06] rounded-full blur-[80px]" style="animation: float 12s ease-in-out infinite 2s;"></div>

  <!-- Grid pattern - very subtle gray, not purple -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, #999 1px, transparent 0); background-size: 32px 32px;"></div>

  <!-- Animated network SVG -->
  <svg class="absolute inset-0 w-full h-full opacity-[0.04]" id="hero-network"></svg>

  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-gray-50/80 to-transparent"></div>

  <div class="relative max-w-[1200px] mx-auto px-6 py-32 text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2.5 px-5 py-2.5 mb-8 bg-white/80 backdrop-blur-sm border border-gray-200 rounded-full shadow-sm animate-fade-in-up">
      <span class="relative flex h-2.5 w-2.5">
        <span class="absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75" style="animation: pulse-ring 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;"></span>
        <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-primary-600"></span>
      </span>
      <span class="text-sm font-medium text-primary-700 font-display" data-i18n="hero.badge">Soluções em Software</span>
    </div>

    <!-- Title -->
    <h1 class="font-display font-bold tracking-tight text-[#212020] mb-6 animate-fade-in-up" style="animation-delay: 0.15s; font-size: clamp(2.5rem, 6vw, 4.5rem); line-height: 1.05;">
      <span data-i18n="hero.title1">Conectando ideias.</span>
      <br />
      <span style="background: linear-gradient(135deg, #4A1278, #61199E, #7B2EB8, #A06EE6); background-size: 200% 200%; -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; color: transparent; animation: gradient-shift 4s ease infinite;" data-i18n="hero.title2">Criando soluções.</span>
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-[#666] max-w-2xl mx-auto mb-12 font-body animate-fade-in-up leading-relaxed" style="animation-delay: 0.3s;" data-i18n="hero.subtitle">
      Startup focada em software, IA e automações.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up" style="animation-delay: 0.45s;">
      <a
        href="#contato"
        class="group inline-flex items-center gap-2.5 px-8 py-4 bg-primary-600 text-white font-display font-semibold rounded-xl hover:bg-primary-500 hover:shadow-2xl hover:shadow-primary-600/30 hover:-translate-y-1 transition-all duration-300"
        data-i18n="hero.cta"
      >
        Começar Agora
      </a>
      <a
        href="#servicos"
        class="group inline-flex items-center gap-2.5 px-8 py-4 bg-white text-[#444] font-display font-semibold rounded-xl border border-gray-200 hover:border-primary-300 hover:bg-primary-50 hover:-translate-y-1 hover:shadow-lg transition-all duration-300"
        data-i18n="hero.services"
      >
        Nossos Serviços
      </a>
    </div>

    <!-- Trust indicators -->
    <div class="flex flex-wrap items-center justify-center gap-8 mt-16 animate-fade-in-up" style="animation-delay: 0.6s;">
      <div class="flex items-center gap-2 text-sm text-[#888]">
        <svg class="w-5 h-5 text-primary-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14" stroke-linecap="round" stroke-linejoin="round"/><path d="M22 4L12 14.01l-3-3" stroke-linecap="round" stroke-linejoin="round"/></svg>
        <span class="font-medium">Entregas ágeis</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-[#888]">
        <svg class="w-5 h-5 text-primary-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke-linecap="round" stroke-linejoin="round"/></svg>
        <span class="font-medium">Código seguro</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-[#888]">
        <svg class="w-5 h-5 text-primary-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke-linecap="round" stroke-linejoin="round"/></svg>
        <span class="font-medium">Alta performance</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2" style="animation: scroll-hint 2s ease-in-out infinite;">
    <svg width="24" height="36" viewBox="0 0 24 36" fill="none" class="text-gray-300">
      <rect x="1" y="1" width="22" height="34" rx="11" stroke="currentColor" stroke-width="2"/>
      <circle cx="12" cy="10" r="3" fill="currentColor"/>
    </svg>
  </div>
</section>

<script>
  // Animated network background
  const svg = document.getElementById('hero-network')
  if (svg) {
    const w = window.innerWidth
    const h = window.innerHeight
    const nodeCount = Math.min(20, Math.floor((w * h) / 50000))
    const nodes: { x: number; y: number; vx: number; vy: number }[] = []

    for (let i = 0; i < nodeCount; i++) {
      nodes.push({
        x: Math.random() * w,
        y: Math.random() * h,
        vx: (Math.random() - 0.5) * 0.3,
        vy: (Math.random() - 0.5) * 0.3,
      })
    }

    function drawNetwork() {
      const lines: string[] = []
      const circles: string[] = []

      for (let i = 0; i < nodes.length; i++) {
        const n = nodes[i]
        n.x += n.vx
        n.y += n.vy
        if (n.x < 0 || n.x > w) n.vx *= -1
        if (n.y < 0 || n.y > h) n.vy *= -1

        circles.push(`<circle cx="${n.x}" cy="${n.y}" r="2.5" fill="#61199E" opacity="0.35"/>`)

        for (let j = i + 1; j < nodes.length; j++) {
          const m = nodes[j]
          const dist = Math.hypot(n.x - m.x, n.y - m.y)
          if (dist < 180) {
            const opacity = (1 - dist / 180) * 0.25
            lines.push(`<line x1="${n.x}" y1="${n.y}" x2="${m.x}" y2="${m.y}" stroke="#61199E" stroke-width="1" opacity="${opacity}"/>`)
          }
        }
      }

      svg.innerHTML = lines.join('') + circles.join('')
      requestAnimationFrame(drawNetwork)
    }

    drawNetwork()
  }
</script>
